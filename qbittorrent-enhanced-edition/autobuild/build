abinfo "Building Non-GUI version..."
mkdir build build-nox
pushd build-nox
	cmake .. ${CMAKE_DEF} -DCMAKE_INSTALL_PREFIX=/usr \
		-DGUI=OFF -DSYSTEMD=ON
	cmake --build .
	DESTDIR=$PKGDIR cmake --install .
popd

abinfo "Building GUI version..."
pushd build
	cmake .. ${CMAKE_DEF} -DCMAKE_INSTALL_PREFIX=/usr
	cmake --build .
	DESTDIR=$PKGDIR cmake --install .
popd
